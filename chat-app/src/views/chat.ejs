<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="icon" href="favicon.ico" type="image/gif">
    <title>chat-app</title>
</head>
<body>
<div class="chat">
    <div  class="chat__sidebar">
        <div id="sidebar">
        </div>
        <a href="/" class="btn">Exit the Room</a>
    </div>
    <div class="chat__main">
        <div id="messages" class="chat__messages">
            <div id="manualscroll" class="manual-scroll d-none">
                <div class="arrow-1"></div>
                <div class="arrow-2"></div>
            </div>
        </div>



        <div class="compose">
            <form action="" id="messageForm">
                <input placeholder="Message" type="text" id="messageText" autocomplete="off" required>
                <!--                <input type="submit" value="Send Message" id="formSubmit">-->
                <button id="formSubmit">Send Message</button>

            </form>

            <button id="sendLocation">Send Locatio</button>
        </div>

    </div>
</div>

<!--message template -->
<script id="messageTemplate" type="text/html">
    <div class="message-wrapper">
        <div class="message">
            <p>
                <span class="message__name">{{username}}</span>
                <span class="message__meta">{{createdAt}}</span>
            </p>
            <p>{{message}}</p>
        </div>
    </div>
</script>

<!--my message template-->
<script id="myMessageTemplate" type="text/html">
    <div class="message-wrapper">
        <div class="message my-message">
            <p>
                <span class="message__name">Me</span>
                <span class="message__meta">{{createdAt}}</span>
            </p>
            <p>{{messageText}}</p>
        </div>
    </div>
</script>

<!--template for users location-->
<script id="locationTemplate" type="text/html">
    <div class="message-wrapper">
        <div class="message">
            <p>
                <span class="message__name">{{username}}</span>
                <span class="message__meta">{{createdAt}}</span>
            </p>
            <p><a href="{{location}}" target="_blank">{{username}} Location</a></p>
        </div>
    </div>
</script>

<!--template for my location-->
<script id="myLocationTemplate" type="text/html">
    <div class="message-wrapper">
        <div class="message my-message">
            <p>
                <span class="message__name">Me</span>
                <span class="message__meta">{{createdAt}}</span>
            </p>
            <p><a href="{{myLocation}}" target="_blank">My Location</a></p>
        </div>
    </div>
</script>

<!--sidebar template-->
<script id="sidebarTemplate" type="text/html">
    <h2 class="room-title">{{room}}</h2>
    <h3 class="list-title">Users</h3>
    <ul class="users">
        {{#users}}
        <li>{{username}}</li>
        {{/users}}
    </ul>
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/3.0.1/mustache.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.6.0/qs.min.js"></script>
<script src="socket.io/socket.io.js"></script>
<script src="/js/chat.js"></script>
<script src="/js/scroll.js"></script>
</body>
</html>